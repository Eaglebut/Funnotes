<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="repository"
            type="ru.eaglebutt.funnotes.Repository" />
    </data>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:refreshing = "@{repository.isLoading}"
        >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="user"
            android:textSize="20sp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:text="add"
                android:id="@+id/addUser"
                android:layout_weight="1"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:text="get"
                android:id="@+id/getUser"
                android:layout_weight="1"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:text="delete"
                android:id="@+id/deleteUser"
                android:layout_weight="1"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:text="update"
                android:id="@+id/updateUser"
                android:layout_weight="1"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="event"
            android:textSize="20sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:text="add"
                android:id="@+id/addEvent"
                android:layout_weight="1"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:text="get"
                android:id="@+id/getEvent"
                android:layout_weight="1"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:text="delete"
                android:id="@+id/deleteEvent"
                android:layout_weight="1"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:text="update"
                android:id="@+id/updateEvent"
                android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:text="get all"
                android:id="@+id/getAll"
                android:layout_weight="3"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/edit_text"
                />


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_data"
            android:text="@{repository.observableString.toString()}"
            tools:textSize="24sp"
            tools:text="test"
            />
    </LinearLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</layout>